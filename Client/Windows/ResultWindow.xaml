<Window x:Class="TestingApp.Windows.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TestingApp.Windows"
        Title="Assessment Results" Height="750" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBrush}" 
                Height="80">
            <TextBlock Text="Assessment Results" 
                       FontSize="26" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Results Content -->
        <Border Grid.Row="1" 
                Background="White" 
                Margin="40,30,40,20"
                CornerRadius="16"
                BorderThickness="1"
                BorderBrush="{StaticResource BorderBrush}">
            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- User Info -->
                <Border Grid.Row="0"
                        Background="#F9FAFC"
                        BorderThickness="0,0,0,1"
                        BorderBrush="{StaticResource BorderBrush}"
                        Padding="30,25">
                    <StackPanel HorizontalAlignment="Center" 
                                Opacity="0">
                        <StackPanel.RenderTransform>
                            <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                        </StackPanel.RenderTransform>

                        <TextBlock x:Name="TxtUserInfo" 
                                   FontSize="20" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TxtCompletionTime" 
                                   Foreground="{StaticResource SubtextBrush}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Score Circle -->
                <Grid Grid.Row="1" 
                      HorizontalAlignment="Center" 
                      Margin="0,40,0,40"
                      Opacity="0">
                    <Grid.RenderTransform>
                        <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                    </Grid.RenderTransform>

                    <Ellipse Width="220" 
                             Height="220" 
                             Fill="{StaticResource SecondaryBrush}"/>

                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock x:Name="TxtScore" 
                                   FontSize="60" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Score" 
                                   FontSize="20"
                                   Foreground="{StaticResource SubtextBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Results Summary -->
                <Border Grid.Row="2" 
                        BorderThickness="0,1,0,0" 
                        BorderBrush="{StaticResource BorderBrush}" 
                        Padding="40,30"
                        Opacity="0">
                    <Border.RenderTransform>
                        <TranslateTransform Y="50"/>
                    </Border.RenderTransform>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Assessment Summary" 
                                       FontSize="20" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,20"/>

                            <Border Background="#F8F9FC"
                                    CornerRadius="12"
                                    Padding="25,20">
                                <StackPanel>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Total Questions" FontSize="16"/>
                                        <TextBlock x:Name="TxtTotalQuestions" 
                                                   Grid.Column="1" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Correct Answers" FontSize="16"/>
                                        <TextBlock x:Name="TxtCorrectAnswers" 
                                                   Grid.Column="1" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#22C55E"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Incorrect Answers" FontSize="16"/>
                                        <TextBlock x:Name="TxtIncorrectAnswers"
                                                   Grid.Column="1" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource AccentBrush}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock Text="Final Result" 
                                       FontSize="20" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,20"/>

                            <Border Background="#F8F9FC"
                                    CornerRadius="12"
                                    Padding="25,20">

                                <StackPanel>
                                    <TextBlock Text="Your performance score is:" 
                                               FontSize="16" 
                                               Margin="0,0,0,15"/>

                                    <Border Background="{StaticResource PrimaryBrush}"
                                            CornerRadius="8"
                                            Padding="20,15"
                                            HorizontalAlignment="Left">
                                        <TextBlock x:Name="TxtFinalScore" 
                                                   FontSize="22" 
                                                   FontWeight="Bold"
                                                   Foreground="White"/>
                                    </Border>

                                    <TextBlock x:Name="TxtFeedback"
                                               FontSize="16"
                                               Margin="0,20,0,0"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="#F8F9FA"
                Height="100"
                BorderThickness="0,1,0,0"
                BorderBrush="{StaticResource BorderBrush}">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <Button Content="Finish Assessment" 
                        Width="220" 
                        Height="60"
                        FontSize="18"
                        Click="BtnClose_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>